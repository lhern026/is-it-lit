<%- include('../partials/header') %>


<section id="show-page">
    <h2>Stadium Name: </h2>
    <h2><%= venue.stadiumName %></h2>
    <h2>Location: </h2>
    <h2><%= venue.location %></h2>
    <h2>Host team: </h2>
    <h2><%= venue.hostTeam %></h2>
    <h2>Capacity: </h2>
    <h2><%= venue.capacity %></h2>
    <form action="../venues/<%= venue._id %>/reviews" method="POST" id="add-review-form">
        <label >Experience:</label>
        <textarea name="experience" ></textarea>
        <label >Average price:</label>
        <textarea name="averagePrice" type="number"></textarea>
        
        <label >Rating:</label>
        <select name="rating" id="">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <input type="submit" value="add review">
    
    </form>
</section>
    <!-- I want to display each review in the array -->
<section>
    <table>
        <thead>
            <tr>
                <th>Experience</th>
                <th>Average price</th>
                <th>Rating</th>
                <th>User</th>
            </tr>
        </thead>
        <tbody>
            
            <% venue.reviews.forEach(function(review){ %>  
                <tr>
                    <td><%= review.experience     %></td>
                    <td><%= review.averagePrice      %></td>
                    <td><%= review.rating     %></td>
                    <!--weve got a bug user is not displaying -->
                    <td class="reviewUser"  ><img src="<%= review.userAvatar %>" > <%= review.user %></td>
                </tr>
                <% }); %>
        </tbody>

    </table>
</section>





<%- include('../partials/footer') %>







